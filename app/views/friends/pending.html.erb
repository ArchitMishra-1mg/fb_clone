<h4>View all your pending requests here </h4>
<ul>
  <% @pending.each do |pending| %>
    <li>
      <% user1 = pending.user_id == current_user.id ? User.find(pending.friend_id) : User.find(pending.user_id) %>
      <%= user1.name %>
      <%= link_to "accept", accept_user_path(friend_id: user1.id), method: 'post'%>
      <%= link_to "reject", reject_user_path(friend_id: user1.id), method: 'delete' %>
    </li>
  <% end %>
</ul>